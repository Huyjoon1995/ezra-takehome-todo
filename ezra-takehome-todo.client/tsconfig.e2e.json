{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "e2e/**/*",
    "tests-examples/**/*",
    "playwright.config.ts"
  ],
  "exclude": [
    "src/**/*",
    "node_modules"
  ]
}



